extend blog

block blogcontent
  each post in posts
    .panel.panel-default.blog-panel
      .panel-heading
          h2.panel-title.blog-heading: a(href=post.url)= post.title 
          h6.blog-date By #{post.author} | #{moment(post.date).format("dddd, MMMM Do, YYYY")}
      .panel-body.blog-preview
          != post.preview
          .tags
              each tag in post.tags
                  a(href=tagUrl(tag))
                      span.label.label-info #{tag}
  - var pageCount = getPageCount();
  if pageCount > 1
    ul.pagination
      - var i = 1;
      - while ( i <= pageCount )
        if page == i
          li(class='active')
            a(href=pageURL(i)) #{i}
        else
          li
            a(href=pageURL(i)) #{i}
        - i++;